.card__content
  %section.card__content__container
    %h2.card__content__container__head クレジットカード情報入力
    = form_with url: credits_path, class: "card__content__container__card-form", local: true do |f|
      %input{name: "__csrf_value", type: "hidden", value: ""}/
      .card__content__container__card-form__content
        .card__content__container__card-form__content__group
          %label{for: "card__content__container__card-form__content__group__payment-card-no"} カード番号
          %span.card__content__container__card-form__content__group__form-require 必須
          = f.number_field :number, class: "input-default", maxlength: "19", placeholder: "半角数字のみ", value: ""
          %ul#card-no-error-wrapper.has-error-text
          %ul.card__content__container__card-form__content__group__card-list
            %li
              %img{alt: "", height: "20", src: "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1105410189", width: "49"}/
            %li
              %img{alt: "", height: "20", src: "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1105410189", width:  "34"}/
            %li
              %img{alt: "", height: "20", src: "https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1105410189", width: "30"}/
            %li
              %img{alt: "", height: "20", src: "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1105410189", width: "32"}/
            %li
              %img{alt: "", height: "20", src: "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1105410189", width: "21"}/
            %li
              %img{alt: "", height: "20", src: "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1105410189", width: "32"}/
            %li
              %img{alt: "", height: "20", src: "https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1105410189", width: "32"}/
        .card__content__container__card-form__content__group__signup-form-expire
          %label{for: "card__content__container__card-form__content__group__signup-form-expire__payment-card-expire"} 有効期限
          %span.card__content__container__card-form__content__group__signup-form-expire__form-require 必須
          %br/
          .card__content__container__card-form__content__group__signup-form-expire__select-wrap
            = f.select :month, {}, {}, class: "select-default" do
              %option{value: "01"} 01
              %option{value: "02"} 02
              %option{value: "03"} 03
              %option{value: "04"} 04
              %option{value: "05"} 05
              %option{value: "06"} 06
              %option{value: "07"} 07
              %option{value: "08"} 08
              %option{value: "09"} 09
              %option{value: "10"} 10
              %option{value: "11"} 11
              %option{value: "12"} 12
            %i.fa.fa-angle-down
          %span 月
          %ul#expire-mm-error-wrapper.has-error-text
          .card__content__container__card-form__content__group__signup-form-expire__select-wrap
            = f.select :year, {}, {}, {class: "select-default"} do
              %option{value: "18"} 18
              %option{value: "19"} 19
              %option{value: "20"} 20
              %option{value: "21"} 21
              %option{value: "22"} 22
              %option{value: "23"} 23
              %option{value: "24"} 24
              %option{value: "25"} 25
              %option{value: "26"} 26
              %option{value: "27"} 27
              %option{value: "28"} 28
            %i.fa.fa-angle-down
          %span 年
          %ul#expire-yy-error-wrapper.has-error-text

        .card__content__container__card-form__content__group
          %label{for: "card__content__container__card-form__content__group__payment-card-security-code"} セキュリティコード
          %span.card__content__container__card-form__content__group__form-require 必須
          =f.number_field :cvc, placeholder: "カード背面4桁もしくは3桁の番", class: "input-default", value:""
          %ul#security-code-error-wrapper.has-error-text
          .card__content__container__card-form__content__group__signup-seqcode
            .card__content__container__card-form__content__group__signup-seqcode__text{"data-js": "show-tips-toggle"}
              %span.card__content__container__card-form__content__group__signup-seqcode__form-question>
              %i.fa.fa-question-circle
              カード裏面の番号とは？
        %input#user_id{name: "user_id", type: "hidden", value: "882383930"}/
        %input#encrypted_card_data{name: "encrypted_card_data", type: "hidden"}/
        %p#primary-error.has-error-text
        %input{name: "after_save_callback", type: "hidden", value: ""}/
        = f.submit "追加する", class: "btn-default btn-red"
      %script{async: "", src: "https://p01.mul-pay.jp/ext/js/token.js"}
      %script{async: "", src: "//www-mercari-jp.akamaized.net/assets/js/get_gmopg_card_token.js?560393726"}
