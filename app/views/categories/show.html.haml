- breadcrumb :category, @category
.default-container
  =render partial: "shared/pc-header"
  = render partial:"shared/bread-crumbs"
  %main.categories-container
    .categories-content
      %ul.parts-nav.clearfix
        -if @category.has_children?
          -@category.children.limit(5).each do |child|
            %li.parts-nav-child
              =link_to child.name, category_path(child)
      %section.items-box-container.clearfix
        %h1.items-box-head
          #{@category.name}の商品一覧
        .items-box-content.clearfix.category-brand-list
          =render partial: "items/item", collection: @items
        = paginate @items, window: 2
  =render partial: "shared/app-banner"
  =render partial: "shared/global-footer"
  =render partial: "shared/footer-sell-btn"
